<UserControl x:Class="CoinCheck.View.UIElements.UIStackTextViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CoinCheck.View.UIElements"
             mc:Ignorable="d" 
             >
    <Grid>
        <StackPanel Orientation="Vertical" Margin="10 0 0 0">
            <Label Style="{StaticResource LabelStyle}" Content="{Binding LabelText, RelativeSource={RelativeSource AncestorType=local:UIStackTextViewer}}" HorizontalAlignment="Center" />
            <TextBlock Style="{StaticResource SecondTextBlock}" Text="{Binding TBText, RelativeSource={RelativeSource AncestorType=local:UIStackTextViewer}}" TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>

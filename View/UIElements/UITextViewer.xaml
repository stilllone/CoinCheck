<UserControl x:Class="CoinCheck.View.UIElements.UITextViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CoinCheck.View.UIElements"
             xmlns:viewmodel="clr-namespace:CoinCheck.ViewModel"
             mc:Ignorable="d">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="105"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Content="{Binding LabelText, RelativeSource={RelativeSource AncestorType=local:UITextViewer}}" Grid.Column="0" />
            <TextBlock Text="{Binding TBText, RelativeSource={RelativeSource AncestorType=local:UITextViewer}}"   Grid.Column="1"
                       TextAlignment="Right" VerticalAlignment="Center" HorizontalAlignment="Right" />
        </Grid>
    </Grid>
</UserControl>
